    <script>
        // Toggle user dropdown
        function toggleUserMenu() {
            document.getElementById('userDropdown').classList.toggle('active');
            document.querySelector('.user-avatar').classList.toggle('active');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.user-menu')) {
                document.getElementById('userDropdown').classList.remove('active');
                document.querySelector('.user-avatar').classList.remove('active');
            }
        });

        // Delete post function
        function deletePost(id, title) {
            if (!confirm(`Are you sure you want to delete "${title}"? This action cannot be undone.`)) return;
            
            fetch('blog_backend.php', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({
                    action: 'delete',
                    id: id
                })
            })
            .then(res => res.json())
            .then(data => {
                if (data.error) throw new Error(data.error);
                showToast('<i class="fas fa-check-circle"></i> Post deleted successfully');
                // Reload the page to reflect changes
                setTimeout(() => location.href = 'blog_backend.php?success=deleted', 1000);
            })
            .catch(err => {
                showToast(`<i class="fas fa-exclamation-circle"></i> ${err.message}`, true);
            });
        }

        // Edit post function - stay in backend with edit mode
        function editPost(id) {
            window.location.href = `blog_backend.php?action=edit&id=${id}`;
        }

        // Filter posts by search term
        function filterPosts(term) {
            const rows = document.querySelectorAll('#postsTableBody tr');
            term = term.toLowerCase();
            
            rows.forEach(row => {
                if (row.cells.length < 2) return; // Skip empty state row
                
                const title = row.cells[0].textContent.toLowerCase();
                const author = row.cells[1].textContent.toLowerCase();
                row.style.display = title.includes(term) || author.includes(term) ? '' : 'none';
            });
        }

        // Filter posts by date
        function filterByDate(period) {
            const rows = document.querySelectorAll('#postsTableBody tr');
            const now = new Date();
            
            rows.forEach(row => {
                if (row.cells.length < 3) return; // Skip empty state row
                
                const dateCell = row.cells[2].textContent;
                const date = new Date(dateCell);
                let show = true;
                
                switch(period) {
                    case 'today':
                        show = date.toDateString() === now.toDateString();
                        break;
                    case 'week':
                        const weekAgo = new Date(now - 7 * 24 * 60 * 60 * 1000);
                        show = date >= weekAgo;
                        break;
                    case 'month':
                        show = date.getMonth() === now.getMonth() && 
                               date.getFullYear() === now.getFullYear();
                        break;
                    default:
                        show = true;
                }
                
                row.style.display = show ? '' : 'none';
            });
        }

        // Toast notification
        function showToast(message, isError = false) {
            const toast = document.getElementById('toast');
            toast.innerHTML = message;
            toast.className = isError ? 'toast error show' : 'toast show';
            
            setTimeout(() => {
                toast.className = 'toast';
            }, 3000);
        }
        
        // Check for URL params on load
        document.addEventListener('DOMContentLoaded', function() {
            <?php if (isset($_GET['success'])): ?>
            showToast('<i class="fas fa-check-circle"></i> Operation completed successfully');
            <?php endif; ?>
        });
    </script>
