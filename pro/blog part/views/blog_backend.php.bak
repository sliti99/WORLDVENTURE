<?php
require_once '../controllers/controller.php';
require_once '../config/auth.php';

// Security check: Restrict access to admin users only
if (isset($_SERVER['HTTP_X_REQUESTED_WITH']) && strtolower($_SERVER['HTTP_X_REQUESTED_WITH']) == 'xmlhttprequest') {
    // For AJAX requests, we don't want to restrict to admin only
    if (!isLoggedIn()) {
        header('Content-Type: application/json');
        echo json_encode(['error' => 'You must be logged in']);
        exit;
    }
} else if (!isLoggedIn() || getUserRole() !== 'admin') {
    // For regular requests, restrict to admin
    header('Location: blog_frontend.php?error=adminonly');
    exit;
}

$controller = new BlogController();

// Check if we're in edit mode
$editMode = false;
$editPost = null;
if (isset($_GET['action']) && $_GET['action'] === 'edit' && isset($_GET['id'])) {
    $editMode = true;
    $editPost = $controller->getPostById($_GET['id']);
}

$posts = [];
$comments = [];

// Here we use handleRequest() properly which returns both posts and comments
$data = ['posts' => [], 'comments' => []];

try {
    // Get all data needed for the admin dashboard using handleRequest
    if (getUserRole() === 'admin') {
        // Set action to list to ensure we get posts
        $_GET['action'] = 'list'; 
        $data = $controller->handleRequest();
        error_log("Admin dashboard loaded with " . count($data['posts']) . " posts and " . count($data['comments']) . " comments");
    }
    
    // For AJAX requests, ensure proper JSON response
    if (isset($_SERVER['HTTP_X_REQUESTED_WITH']) && strtolower($_SERVER['HTTP_X_REQUESTED_WITH']) == 'xmlhttprequest') {
        header('Content-Type: application/json');
        echo json_encode(['success' => true, 'data' => $data]);
        exit;
    }
} catch (Exception $e) {
    if (isset($_SERVER['HTTP_X_REQUESTED_WITH']) && strtolower($_SERVER['HTTP_X_REQUESTED_WITH']) == 'xmlhttprequest') {
        header('Content-Type: application/json');
        echo json_encode(['error' => $e->getMessage()]);
        exit;
    }
    // For regular requests, show error in UI
    $error = $e->getMessage();
    $data = ['posts' => [], 'comments' => []];
}

// Ensure data is available even if there was an error
if (!isset($data) || !is_array($data)) {
    $data = ['posts' => [], 'comments' => []];
}
